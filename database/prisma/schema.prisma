generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define Admin model
model Admin {
  id           Int    @id @default(autoincrement())
  username     String @unique
  password     String
  refreshToken String?
}

// Define Book model
model Book {
  id               Int         @id @default(autoincrement())
  title            String
  author           String
  ISBN             String      @unique
  availableQuantity Int
  shelfLocation    String
  borrowings       Borrowing[] // Relation field
}

// Define Borrower model
model Borrower {
  id             Int         @id @default(autoincrement())
  name           String
  email          String      @unique
  registeredDate DateTime    @default(now())
  borrowings     Borrowing[] // Relation field
  refreshToken   String?
}

// Define Borrowing model to track book borrowings
model Borrowing {
  id           Int      @id @default(autoincrement())
  book         Book     @relation(fields: [bookId], references: [id])
  bookId       Int
  borrower     Borrower @relation(fields: [borrowerId], references: [id])
  borrowerId   Int
  checkoutDate DateTime @default(now())
  returnDate   DateTime?
  dueDate      DateTime
}

enum EventType{
  borrow
  return
}

// Define Log model to track borrowing events
model Log {
  id           Int      @id @default(autoincrement())
  bookTitle    String   // Title of the borrowed book
  borrowerName String   // Name of the borrower
  eventDate    DateTime @default(now())
  eventType    EventType   // Type of the event (e.g., "borrow", "return")
}